<%= render "layouts/shared/flash" %>

<h1>Companies</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Company Name</th>
      <th>City</th>
      <th>Phone</th>
      <th>Website</th>
      <th></th> <!-- Actions column -->
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.city %></td>
        <td><%= company.phone %></td>
        <td>
          <%= link_to company.website, company.website, target: "_blank" if company.website.present? %>
        </td>
        <td>
          <!-- Action Icons -->
          <%= link_to company_path(company), class: 'btn btn-sm text-primary' do %>
            <i class="bi bi-eye"></i> <!-- Show icon -->
          <% end %>
          <%= link_to edit_company_path(company), class: 'btn btn-sm text-secondary' do %>
            <i class="bi bi-pencil"></i> <!-- Edit icon -->
          <% end %>
          <%= link_to company_path(company), method: :delete, data: { confirm: 'Are you sure?', turbo: false }, class: 'btn btn-sm text-danger' do %>
  <i class="bi bi-trash"></i> <!-- Delete icon -->
<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>