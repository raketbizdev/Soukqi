<%= render "layouts/shared/flash" %>

<h1>Resumes</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Professional Title</th>
      <th>Location</th>
      <th></th> <!-- Actions column -->
    </tr>
  </thead>
  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= resume.name %></td>
        <td><%= resume.professional_title %></td>
        <td><%= resume.location %></td>
        <td>
          <!-- Action Icons -->
          <%= link_to resume_path(resume), class: 'btn btn-sm text-primary' do %>
            <i class="bi bi-eye"></i> <!-- Show icon -->
          <% end %>
          <%= link_to edit_resume_path(resume), class: 'btn btn-sm text-secondary' do %>
            <i class="bi bi-pencil"></i> <!-- Edit icon -->
          <% end %>
          <%= link_to resume_path(resume), method: :delete, data: { confirm: 'Are you sure?', turbo: false }, class: 'btn btn-sm text-danger' do %>
            <i class="bi bi-trash"></i> <!-- Delete icon -->
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
