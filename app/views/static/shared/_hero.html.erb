<div class="container-fluid hero-section text-white p-5 text-center">
  <div class="row justify-content-center align-items-center">
    <div class="col-md-10 col-lg-8">
      <!-- Headline -->
      <h1 class="display-4 fw-bold">Connecting IT Talent with Top Companies</h1>
      <p class="lead mb-4">Explore thousands of job opportunities in the tech industry</p>
      
      <!-- Job Search Bar with Filters -->
      <div class="input-group mb-3">
        <input type="text" class="form-control form-control-lg" placeholder="Search Jobs, Companies, and More..." aria-label="Job Search">
        <select class="form-select form-select-lg" aria-label="Filter by Location">
          <option selected>Location</option>
          <option value="1">Remote</option>
          <option value="2">On-site</option>
          <option value="3">Hybrid</option>
        </select>
        <button class="btn btn-dark btn-lg" type="button">Search Jobs</button>
      </div>
      
      <!-- Call to Action Buttons -->
      <div class="d-flex justify-content-center gap-3 mt-4">
        <a href="/jobs" class="btn btn-light btn-lg">Search Jobs</a>
        <a href="/employers/new" class="btn btn-outline-light btn-lg">Post a Job</a>
      </div>

      <!-- Job Statistics Section -->
      <div class="row text-white mt-5">
        <div class="col">
          <h3 class="counter">5,432</h3>
          <p>Active Jobs</p>
        </div>
        <div class="col">
          <h3 class="counter">892</h3>
          <p>Companies</p>
        </div>
        <div class="col">
          <h3 class="counter">12,345</h3>
          <p>Job Seekers</p>
        </div>
      </div>

      <!-- Trust Indicators / Featured Companies -->
      <div class="mt-5">
        <h5>Trusted by Leading IT Companies:</h5>
        <div class="d-flex justify-content-center align-items-center mt-3">
          <img src="/assets/company1-logo.jpg" class="me-4" alt="Company 1" style="height: 40px;">
          <img src="/assets/company2-logo.jpg" class="me-4" alt="Company 2" style="height: 40px;">
          <img src="/assets/company3-logo.jpg" alt="Company 3" style="height: 40px;">
        </div>
      </div>
    </div>
  </div>
</div>